<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgPoster_FilmItem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="10:16"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvEnglishTitle_FilmItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/imgPoster_FilmItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@+id/tvVietNamTitle_FilmItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/imgPoster_FilmItem"
        app:layout_constraintTop_toBottomOf="@+id/tvEnglishTitle_FilmItem"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@+id/tvView_FilmItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/imgPoster_FilmItem"
        app:layout_constraintTop_toBottomOf="@+id/tvVietNamTitle_FilmItem"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@+id/tvDescription_FilmItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:lines="5"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/imgPoster_FilmItem"
        app:layout_constraintTop_toBottomOf="@+id/tvView_FilmItem"
        app:layout_constraintWidth_default="wrap" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <com.phamnhuvu.android.hfilmtrainingapp.views.LikeButton
        android:id="@+id/btnLike_FilmItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/btnWatch_FilmItem"
        app:layout_constraintStart_toEndOf="@+id/imgPoster_FilmItem"
        app:layout_constraintTop_toTopOf="@+id/btnWatch_FilmItem" />

    <Button
        android:id="@+id/btnWatch_FilmItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription_FilmItem" />
</android.support.constraint.ConstraintLayout>